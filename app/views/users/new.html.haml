- if user.errors.any?
  %ul
    - user.errors.each do |m|
      %li m
  
%fieldset
  = form_for user do |f|
    = f.label :email
    %br
    = f.email_field :email
    %br

    = f.label :name
    %br
    = f.text_field :name
    %br

    = f.label :password
    %br
    = f.password_field :password
    %br

    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
    %br

    = f.submit "Join!"
